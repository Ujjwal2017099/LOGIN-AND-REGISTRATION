<div style="
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
    font-family: cursive;
">
     <h1>Register</h1>
     <form action="register" method="POST">
          <div>
               <input type="text" name="name" placeholder="name" id="name" required style="padding: 7px;margin-bottom: 17px;">
               <br>
               <input type="email" name="email" placeholder="email" id="email" required style="padding: 7px;margin-bottom: 17px;">
               <br>
               <input type="password" name="password" placeholder="password" id="password" required style="padding: 7px;margin-bottom: 17px;">
          </div>
          <button type="submit" id="submit">submit</button>
     </form>
     <a href="/login" style="
              text-decoration: none;
              color: black;
     ">login</a>
</div>